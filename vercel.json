{
    "builds": [
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { 
                "distDir": "staticfiles" 
            }
        },
        {
            "src": "keypoint_project/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb", 
                "runtime": "python3.12.4"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "keypoint_project/wsgi.py"
        }
    ]
}